<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="logo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">180dp</item>
        <item name="android:background">@drawable/fundologo</item>
    </style>

    <style name="email_barra">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/email_login</item>
        <item name="android:padding">13dp</item>
        <item name="android:layout_marginLeft">80dp</item>
        <item name="android:layout_marginRight">80dp</item>
        <item name="android:textSize">20sp</item>sssss
    </style>

    <style name="login_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_login</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:textColor">"@color/white"</item>
    </style>

    <style name="login_button_GREY">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_login_grey</item>
        <item name="android:padding">1dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:textColor">"@color/dark_blue"</item>
    </style>

    <style name="button_voltar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_login_grey</item>
        <item name="android:padding">1dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:textColor">"@color/dark_blue"</item>
    </style>

    <style name="barranumbercard">
        <item name="android:layout_width">299dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/quadradonc</item>
        <item name="android:layout_marginLeft">80dp</item>
        <item name="android:layout_marginRight">80dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="chip_card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ic_sim_card_chip_1</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginRight">1dp</item>
    </style>

    <style name="cardsdatascreen">
        <item name="android:layout_width">29dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/quadradonc</item>
    </style>

    <style name="nfc_character">
        <item name="android:layout_width">329.67dp</item>
        <item name="android:layout_height">360.42dp</item>
        <item name="android:background">@drawable/nfc</item>
    </style>

    <style name="botao_camera_redondo">
        <item name="android:background">@drawable/botaocamera</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:layout_width">57dp</item>
        <item name="android:layout_height">57dp</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="FullScreenDialog">
        <item name="android:windowBackground">@color/dark_blue</item>
    </style>

    <style name="button_options">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_login</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="ErrorEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/error_edit_text_background</item>
        <item name="android:padding">13dp</item>
        <item name="android:layout_marginLeft">80dp</item>
        <item name="android:layout_marginRight">80dp</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>