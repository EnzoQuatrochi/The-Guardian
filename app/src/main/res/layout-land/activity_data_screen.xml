<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/grey"
        tools:context=".DataScreen">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/rectangle"
            android:layout_width="995dp"
            android:layout_height="86dp"
            style="@style/logo"
            android:layout_gravity="center_horizontal"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aluga_armar"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:textSize="20sp"
            android:fontFamily="@font/kronaone_regular"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-50dp"
            android:layout_marginStart="15dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_voltar"
            style="@style/button_voltar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="-45dp"
            android:drawableStart="@drawable/baseline_arrow_back_ios_new_24"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            tools:ignore="SpeakableTextPresentCheck"
            android:layout_marginStart="80dp"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="250dp"
                android:layout_height="20dp"
                android:text="@string/prox"
                android:fontFamily="@font/kronaone_regular"
                android:textSize="18sp"
                android:textAlignment="viewStart"
                android:textColor="@color/dark_blue"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="40dp"/>

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/radiobutton1"
                    style="@style/login_button"
                    android:layout_width="190dp"
                    android:layout_height="49dp"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:buttonTint="@color/grey"
                    android:fontFamily="@font/kronaone_regular"
                    android:textAlignment="center"
                    android:textSize="16sp" />

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/radiobutton2"
                    style="@style/login_button"
                    android:layout_width="190dp"
                    android:layout_height="49dp"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:buttonTint="@color/grey"
                    android:fontFamily="@font/kronaone_regular"
                    android:textAlignment="center"
                    android:textSize="16sp" />

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/radiobutton3"
                    style="@style/login_button"
                    android:layout_width="190dp"
                    android:layout_height="49dp"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:buttonTint="@color/grey"
                    android:fontFamily="@font/kronaone_regular"
                    android:textAlignment="center"
                    android:textSize="16sp" />

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/radiobutton4"
                    style="@style/login_button"
                    android:layout_width="190dp"
                    android:layout_height="49dp"
                    android:layout_marginStart="235dp"
                    android:layout_marginTop="-198dp"
                    android:layout_marginBottom="10dp"
                    android:buttonTint="@color/grey"
                    android:fontFamily="@font/kronaone_regular"
                    android:textAlignment="center"
                    android:textSize="16sp" />

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/radiobutton5"
                    style="@style/login_button"
                    android:layout_width="190dp"
                    android:layout_height="49dp"
                    android:layout_marginStart="235dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:buttonTint="@color/grey"
                    android:fontFamily="@font/kronaone_regular"
                    android:textAlignment="center"
                    android:textSize="16sp" />

            </RadioGroup>
        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/marker_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textAlignment="viewStart"
            android:textColor="@color/dark_blue"
            android:textSize="18sp"
            android:fontFamily="@font/kronaone_regular"
            android:layout_marginTop="-240dp"
            android:layout_marginStart="440dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/marker_reference"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_blue"
            android:textAlignment="viewStart"
            android:textSize="16sp"
            android:fontFamily="@font/jurabold"
            android:layout_marginTop="0dp"
            android:layout_marginStart="440dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/marker_disponibility"
            android:layout_width="370dp"
            android:layout_height="30dp"
            android:textColor="@color/dark_blue"
            android:textAlignment="viewStart"
            android:textSize="16sp"
            android:fontFamily="@font/jurabold"
            android:layout_marginTop="0dp"
            android:layout_marginStart="440dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:text="@string/avisoarmario"
            android:textSize="10sp"
            android:fontFamily="@font/jurabold"
            android:textAlignment="viewStart"
            android:textColor="@color/dark_blue"
            android:layout_marginTop="0dp"
            android:layout_marginStart="440dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_consultar"
            android:text="@string/confirmaloc"
            style="@style/login_button"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/kronaone_regular"
            android:layout_width="150dp"
            android:layout_height="46dp"
            android:layout_marginTop="9dp"
            android:layout_marginStart="235dp"/>


    </androidx.appcompat.widget.LinearLayoutCompat>

</ScrollView>